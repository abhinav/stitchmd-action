{
  "name": "stitchmd-action",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Runs stitchmd on a Markdown file.",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/main.ts --outdir=./dist --entry-naming=index.js --target=node --format=esm --minify --sourcemap=linked",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint .",
    "test": "bun test",
    "all": "bun run build && bun run format && bun run lint && bun test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abhinav/stitchmd-action.git"
  },
  "keywords": [
    "markdown"
  ],
  "author": "Abhinav Gupta",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/tool-cache": "^2.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-plugin-github": "^5.0.0",
    "eslint-plugin-jest": "^29.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.2.5"
  }
}
